<header>
  <h1>Customers Page</h1>
</header>
<section>
  <div>
    <div class="table-controls"><a
        href="/customers/new"
        class="btn--link btn--small"
      >Add new</a></div>
    <table border="1">
      <thead>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Created At</th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        {{#each customers}}
          <tr>
            <td>{{this.id}}</td>
            <td><a href="/customers/{{this.id}}">{{this.first_name}}</a></td>
            <td><a href="/customers/{{this.id}}">{{this.last_name}}</a></td>
            <td>{{this.email}}</td>
            <td>{{formatCreatedAtDate this.created_at}}</td>
            <td><a href="/customers/edit/{{this.id}}">Edit</a></td>
            <td><a href="/customers/delete/{{this.id}}">Delete</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>